
.container {
  padding: 84rpx 0 20rpx 0;
} 
.top-bar {
  position: fixed;
  overflow: hidden;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #506ac782;
  z-index: 100;
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 3rpx 15rpx #cccccc59;
}
.swiper-pic {
  width: 100%;
}
.search-icon {
  font-size: 28rpx;
  position: absolute;
  z-index: 5;
  color: #506ac7;
  left: 30rpx;
}
.search-input {
  width:550rpx;
  height: 60rpx;
  border-radius: 70rpx;
  background-color: #506ac73d;
  color: white;
  padding-left: 65rpx;
  font-size: 28rpx;
}
.placeholder {
  color: #506ac7;
  font-size: 28rpx;
}
.recommend-box {
  margin-top: 15rpx;
  padding: 0 20rpx;
}
.recommend-box .recommend-box-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  position: relative;
}
.recommendbox-top-title {
  color:#9aabe6;
  font-size: 30rpx;
}
.recommend-box-scroll {
  height: 240rpx;
  padding: 10rpx;
  padding: 0;
}
.recommend-box-item {
  width: 200rpx;
  height: 100%;
  position: relative;
  margin-left: 15rpx;
  flex: 0 0 auto;
}
.recommend-box-item image {
  width: 100%;
  border-radius: 20rpx;
}
.recommend-box-item:nth-child(1) {
  margin-left: 0;
}
.recommend-box-item-title {
  position: absolute;
    color: #9aabe6;
    bottom: -20rpx;
    left: 0;
    font-size: 20rpx;
    white-space: nowrap;
    overflow: hidden;
    width: 100%;
    text-overflow: ellipsis;
}
.recommend-box-scroll-wrap {
  display: flex;
}
.recommend-box-top-more {
  position: relative;
  left: 5rpx;
  font-size: 20rpx;
  color: #9aabe6;
}
.arr-box {
  display: flex;
  align-items: center;
}
.more-arrow {
  top: 3rpx;
  position: relative;
  font-size: 30rpx;
  color: #9aabe6;
}
.hot-wrapper {
  padding: 0 20rpx 20rpx 20rpx;
}
.hot-title{ 
  color: #333;
  font-size: 22rpx;
  margin:25rpx 0 25rpx 0;
  padding-bottom: 6px;
  border-bottom: 1px solid #cccccc6b;
}
.hot-text-box view{
  color: #9aabe6;
    font-size: 26rpx;
    padding: 5rpx 15rpx;
    border-radius: 50rpx;
    border: 1px solid #cccccc6b;
    margin: 0 20rpx 10rpx 0;
    display: inline-block;
    position: relative;
}
.hi-close {
  color: #9aabe6;
    font-size: 28rpx;
    position: absolute;
    z-index: 5;
    right: -20rpx;
    top: -10rpx;
}
.search-list-song-item {
  display: flex;
  border: 1rpx solid #cccccc2e;
  border-left: none;
  border-right: none;
  padding: 12rpx 0;
  align-items: center;
  position: relative;
}
.search-title-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.search-title-box text:nth-child(1){
  font-size: 24rpx;
  color: #9aabe6;
  margin-bottom: 5rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.search-title-box text:nth-child(2){
  font-size: 19rpx;
  color: #9aabe6;
}
.play-btn {
  color: #9aabe6;
  font-size: 30rpx;
  position: absolute;
  right: 0;
}
.search-icon-remen {
  color: red;
  font-size: 27rpx;
  margin-right: 3rpx;
}
.search-shouye {
  color: #506ac7;
  font-size: 35rpx;
  margin-right: 60rpx;
}
.bg-pic {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.search-icon-res{
  width: 58rpx;
  height: 58rpx;
  margin-right: 14rpx;
  border-radius: 10rpx;
}