
.container {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 1;
  background-color: #161824;
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
  -webkit-transform: scale(1.5);
  -ms-transform: scale(1.5);
  transform: scale(1.5);
  -webkit-transform-origin: center;
  -ms-transform-origin: center;
  transform-origin: center;
  opacity: 1;
  transform: scale(1.5);
  transform-origin: center center;
  filter: blur(30px);
} 
.shade {
  position: fixed;
    left: 0;
    bottom: 0;
    z-index: 2;
    width: 100%;
    height: 50%;
    background: -webkit-linear-gradient(top,rgba(0,0,0,0),#000);
    background: linear-gradient(
180deg,rgba(0,0,0,0),#000);
pointer-events: none;
}
.shade1 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
  height: 30%;
  background-image: -webkit-linear-gradient(top,rgba(0,0,0,.5),rgba(0,0,0,0));
  background-image: linear-gradient( 180deg,rgba(0,0,0,.5),rgba(0,0,0,0));
  pointer-events: none;
}
.needle-ab {
  width: 115rpx;
    position: fixed;
    z-index: 10;
    left: 50%;
    transform: translateX(-50%);
    transform-origin: 0 0;
    top: -30rpx;
    transform: rotate(-40deg) translateX(-50%);
}
.border-play {
  animation: needle-ab-animate 0.6s linear forwards;
}
.cover-play {
  animation: cover-play-animate 10s linear infinite;
}
.border-stop {
  animation: needle-ab-animate-stop 0.6s linear forwards;
}
@keyframes needle-ab-animate-stop{
  0% {
    top: 0;
    transform: rotate(0deg) translateX(-50%);
  }
  100% {
    top: -30rpx;
    transform: rotate(-40deg) translateX(-50%)
  }
}
@keyframes needle-ab-animate{
  0% {
    top: -30rpx;
    transform: rotate(-40deg) translateX(-50%)
  }
  100% {
    top: 0;
    transform: rotate(0deg) translateX(-50%);
  }
}
@keyframes cover-play-animate{
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
